page {
    background: #FFFFFF;
}

view {
    box-sizing: border-box;
}

.menu-btn {
    height: auto;
    line-height: normal;
    background: none;
    border: none;
    border-radius: 0;
    padding: 0;
    margin: 0;
}

.menu-btn::after {
    border: none;
}

.mine-desc {
    display: flex;
    align-items: center;
    background: #F6F5F5;
    font-size: 28rpx;
    color: #999999;
    letter-spacing: 1px;
    height: 80rpx;
    padding: 0 25rpx;
}

.text-area-box {
    padding: 25rpx;
    background: #FFFFFF;
    color: #999999;
    border-bottom: 1px solid #F0EFEF;
    display: flex;
}

.text-area-box textarea {
    width: 100%;
    height: 300rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #999999;
}

.tips-title {
    margin-top: 10rpx;
    padding: 25rpx;
    font-size: 26rpx;
    color: #999999;
}

.tips-item {
    padding: 10rpx 25rpx;
    font-size: 24rpx;
    color: #999999;
}

.save-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    letter-spacing: 2px;
    color: #fff;
    background: #16B38A;
    border-radius: 5px;
    width: 80%;
    height: 88rpx;
    margin: 100rpx auto;
}