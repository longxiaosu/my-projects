page {
    background: #2DC998;
}

view {
    box-sizing: border-box;
}

.top-fill {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 5000;
    background: #2DC998;
}

.hiddens {
    overflow: hidden;
}

.top-search-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #2DC998;
    padding-bottom: 40rpx;
    position: relative;
    z-index: 5000;
}

.top-search-box .logo-text {
    font-size: 78rpx;
    color: #fff;
    font-weight: 600;
    letter-spacing: 1px;
}

.top-search-box .search-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    border-radius: 25px;
    background: #fff;
    font-size: 30rpx;
    color: #CCCCCC;
    width: 90%;
    height: 76rpx;
    line-height: normal;
    margin-top: 30rpx;
}

.search-btn::after {
    border: none;
}

.search-btn .iconfont {
    display: flex;
    align-items: center;
    margin-right: 10rpx;
    font-size: 36rpx;
    color: #CCCCCC;
}

.screen-bar {
    display: flex;
    height: 85rpx;
    background: #fff;
    border-bottom: 1px solid #F2F2F3;
    box-shadow: 0 2px 6px 0 rgba(0, 0, 0, .13);
    position: relative;
    z-index: 5000;
}

.screen-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.sreen-title {
    max-width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    color: #676767
}

.screen-btn .iconfont {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18rpx;
    color: #676767;
    padding: 0 10rpx 0 10rpx;
    transition: all 0.4s ease;
}

.screen-btn-active .sreen-title,
.screen-btn-active .iconfont {
    color: #2DC998;
}

.screen-btn-active .iconfont {
    transform:rotate(180deg);
}


.hideLoad {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 26rpx;
    color: #959595;
    background: #fff;
}

.screen-page {
    position: absolute;
    bottom: 0;
    left: 0;
    transform: translateY(100%);
    width: 100%;
    background: #FAFAFA;
    display: flex;
    flex-direction: column;
}

.screen-page-scroll {
    flex: 1;
    padding: 10rpx 0rpx 30rpx;
    box-sizing: border-box;
    overflow: auto;
}

.screen-page-box {
    padding: 0 25rpx;
}

.cl-option-title {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    color: #AAAAAA;
    letter-spacing: 1px;
}

.cl-options-box {
    display: flex;
    flex-wrap: wrap;
}

.cl-options-item {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 160rpx;
    height: 64rpx;
    margin: 0 15rpx 15rpx 0;
    padding: 0 15rpx;
    font-size: 26rpx;
    color: #6B6B6B;
    background: #FFFFFF;
    border-radius: 4px;
    border: 1px solid #DFDFDF;
}

.item-active {
    color: #fff;
    background: #2DC998;
    border-color: #2DC998;
}

.screen-menu-btn {
    display: flex;
    height: 84rpx;
    border-top: 1px solid #F3F3F3;
}

.cl-btn {
    flex: 1;
    background: #FFFFFF;
    border: none;
    border-radius: 0;
    padding: 0;
    margin: 0;
    line-height: normal;
    font-size: 28rpx;
    letter-spacing: 1px;
    color: #000;
    display: flex;
    align-items: center;
    justify-content: center;
}

.cl-btn::after {
    border: none;
}

.cl-check {
    color: #fff;
    background: #2DC998;
}


.background-box {
    position: fixed;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 4000;
    background-color: rgba(0, 0, 0, 0.4);
    display: block;
}

.fake-bg {
    background: #fff;
}

.top-title {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    font-weight: bold;
    letter-spacing: 1px;
    color: #313131;
    height: 100rpx;
}

.input-content {
    padding: 20rpx 70rpx;
    display: flex;
    flex-direction: column;
}

.input-box {
    display: flex;
    align-items: center;
    height: 110rpx;
    border-bottom: 1px solid #D3D3D3;
}

.input-box .iconfont {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80rpx;
    font-size: 38rpx;
    color: #999999;
    margin-right: 10rpx;
}

.form-input-text {
    flex: 1;
    font-size: 28rpx;
    color: #000;
    height: 80rpx;
    line-height: 80rpx;
}

.place-input {
    color: #999999;
}

.save-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    letter-spacing: 2px;
    color: #fff;
    background: #16B38A;
    border-radius: 3px;
    width: 100%;
    height: 85rpx;
    margin-top: 80rpx;
}