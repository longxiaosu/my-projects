page {
    background: #f5f8fa;
}

view {
    box-sizing: border-box;
}

.fill-bottom {
    height: 100rpx;
}

.top-search {
    display: flex;
    align-items: center;
    height: 80rpx;
    font-size: 28rpx;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 9999;
    background-color: #fff;
}

.search-input {
    flex: 1 1 85%;
    display: flex;
    align-items: center;
    background-color: #f6f6f6;
    color: #9d9d9d;
    border-radius: 25px;
    margin: 0 20rpx;
    height: 65rpx;
    padding: 0rpx 25rpx;
    font-size: 28rpx;
}

.icon-wenhao {
    display: flex;
    align-items: center;
    margin-right: 20rpx;
}

.icon-qingchu {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}

.search-input input {
    flex: 1 1 auto;
    color: black;
}

.search-btn {
    flex: 1 1 15%;
    margin-left: 5rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.fill-top {
    height: 80rpx;
}

.history-list {
    padding: 35rpx 20rpx;
    background-color: #fff;
}

.history-title {
    color: #333;
    font-size: 28rpx;
    font-weight: bold;
    display: flex;
    justify-content: space-between;
    height: 50rpx;
    line-height: 50rpx;
}

.icon-shanchu {
    color: #ccc;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100rpx;
    height: 50rpx;
    font-weight: normal;
}

.list-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    margin-top: 20rpx;
}

.list-item {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #676767;
    background: #FFFFFF;
    border: 1px solid #EDEDEC;
    padding: 15rpx 20rpx;
    border-radius: 0px;
    margin: 0 25rpx 25rpx 0;
    line-height: normal;
}

.list-item::after {
    border: none;
}

.searcth-title {
    display: flex;
    align-items: center;
    background: #fff;
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
    padding: 0 20rpx;
    height: 80rpx;
}

.classify {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    background: #fff;
    font-size: 26rpx;
    color: #999;
    padding: 0 20rpx 20rpx;
    height: 80rpx;
}

.classify-item {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 180rpx;
    height: 60rpx;
    border-radius: 2px;
    margin-right: 15rpx;
    transition: all 0.2s ease;
}

.classify-active {
    background-color: #00b38a;
    color: #fff;
}