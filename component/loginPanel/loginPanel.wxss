@import "../../style/iconfont.wxss";

view {
  box-sizing: border-box;
}

.background-box {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 4000;
  background-color: rgba(0, 0, 0, 0.4);
  display: block;
}

.login-panel-box {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 5px;
  width: 70%;
  padding: 40rpx 50rpx 70rpx;
  display: flex;
  flex-direction: column;
  z-index: 5000;
}

.top-title {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  letter-spacing: 1px;
  color: #656565;
}

.top-title .iconfont {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  font-size: 36rpx;
  position: absolute;
  right: 6rpx;
  top: 6rpx;
  color: #919191;
}

.login-btn {
  border-radius: 5px;
  border: none;
  background: #45AA30;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #fff;
  margin: 50rpx 0 0 0;
  padding: 0;
  line-height: normal;
  height: 80rpx;
  letter-spacing: 1px;
}

.login-btn image {
  width: 49rpx;
  height: 40rpx;
  margin-right: 20rpx;
}