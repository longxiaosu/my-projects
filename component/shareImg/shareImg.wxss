@import "../../style/iconfont.wxss";

.icon-closeing:before {
  content: '\e6d6';
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

.background-box {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 4000;
  background-color: rgba(0, 0, 0, 0.4);
  display: block;
}

view {
  box-sizing: border-box;
}

.share-img-box {
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #FBFAFA;
  width: 100%;
  height: 83%;
  padding: 0 20rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 9000;
  animation: fadeIn 0.8s 1;
  overflow: hidden;
}

.top-title {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  font-size: 30rpx;
  letter-spacing: 1px;
  color: #666666;
  height: 80rpx;
  width: 100%;
}

.top-title .icon-closeing {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 80rpx;
  font-size: 36rpx;
  position: absolute;
  right: 0;
  top: 0;
  color: #676767;
}

.share-img-box .share-img {
  margin-top: 10rpx;
  width: 80%;
  flex: 1;
  background-color: #FBFAFA;
}

.save-btn {
  margin-top: 50rpx;
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(to bottom right, #1ACCB4, #3BB7DA);
  font-weight: bold;
  font-size: 30rpx;
  color: #fff;
  letter-spacing: 1px;
  border-radius: 10px;
}