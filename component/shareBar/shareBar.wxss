.hover-btn {
  background-color: #f1f1f1 !important;
}

.share-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding-top: 20rpx;
  color: #D18E1E;
  font-size: 28rpx;
  letter-spacing: 1px;
}

.share-box {
  background-color: #fff;
  width: 100%;
  display: flex;
  align-items: center;
  height: 210rpx;
}

.share-item {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;
  background: none;
  border: none;
  color: #000;
  height: 210rpx;
  line-height: normal;
}

.share-item::after {
  border: 0;
}

.friends-img {
  width: 100rpx ;
  height: 100rpx ;
}

.shares-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  letter-spacing: 1px;
  color: #919191;
}


.cancel-btn {
  padding: 30rpx 0 50rpx;
  border-top: 1px solid #f1f1f1;
  font-size: 28rpx;
  letter-spacing: 2px;
  color: #646464;
  box-sizing: border-box;
  text-align: center;
}