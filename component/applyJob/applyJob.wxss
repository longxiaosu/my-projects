@import "../../style/iconfont.wxss";

view {
  box-sizing: border-box;
}

.apply-job-box {
  min-height: 500rpx;
  font-size: 30rpx;
  color: #000;
  display: flex;
  flex-direction: column;
}

.bor-b {
  border-bottom: 1px solid #F5F4F4;
}

.form-input-box {
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 0 25rpx 20rpx;
}

.form-input-item {
  display: flex;
  align-items: center;
}

.form-input-title {
  height: 80rpx;
  line-height: 80rpx;
  min-width: 200rpx;
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 1px;
}

.form-input-text {
  flex: 1;
  font-size: 28rpx;
  text-align: right;
  min-height: 100rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  color: #999999;
  min-width: 0;
}

.align-left {
  text-align: left;
}

.form-input-item .icon-you {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 28rpx;
  color: #D8D8D8;
  flex-shrink: 0;
  width: 50rpx;
}

.eli {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.aw {
  min-width: 600rpx;
}

.menu-btn {
  height: auto;
  line-height: normal;
  background: none;
  border: none;
  border-radius: 0;
  padding: 0;
  margin: 0;
}

.menu-btn::after {
  border: none;
}


.bottom-btn-box {
  display: flex;
  align-self: flex-end;
  width: 100%;
  height: 80rpx;
}

.check-btn {
  flex: 1;
  background: #2DC998;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 2px;
}

.cancel-btn {
  background: #fff;
  color: #323233;
}